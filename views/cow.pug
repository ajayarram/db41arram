extends layout

block content
  h1= title
  - let cows=results
  div(class="container-fluid mt-3")
  div(class="row")
    each cow,index in cows 
        div(class="col-sm-4 m-1 p-3" onclick=`buy(${index})` style=("font-weight:bolder")) #{cow.cowName} - #{cow.habitat} -  #{cow.price}
  script.
     
      function buy(itemNo)
      {
        alert(`You purchased Item ${itemNo+1}`)
      }